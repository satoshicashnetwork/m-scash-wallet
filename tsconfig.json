{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "./*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "include": [
    "types/**/*",
    "utils/**/*",
    "declarations.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
